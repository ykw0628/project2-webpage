<!-- Business Contact List -->

<div class="wrapper justify-content-md-center"><h1>Business contacts list</h1>
  <% if(typeof displayName == 'string' && displayName) { %>
   <div id="addContacts">
    <a href="/contacts-list/add" class="btn btn-primary btn-lg">
      Add New Contracts</a>
      </div>
      <% } %>
  <div class="col">
      <br>

    <table class="table table-striped table-dark">
        <thead>
          <tr>
          <% if(typeof displayName == 'string' && displayName) { %>
            <th scope="col">#</th>
            <th scope="col">Contact name</th>
            <th scope="col">Contact number</th>
            <th scope="col">Email address</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <% } else { %>
            <th scope="col">#</th>
            <th scope="col">Contact name</th>
            <th scope="col">Contact number</th>
            <th scope="col">Email address</th>

            <% } %>
          </tr>
        </thead>
        <tbody>
        <!--Repeated-->
        <% for (let i = 0; i < ContactList.length; i++) { %>
          <tr>
            <% if(typeof displayName == 'string' && displayName) { %>
            <th scope="row"><%= i %></th>
            <td><%= ContactList[i].name %></td>
            <td><%= ContactList[i].number %></td>
            <td><%= ContactList[i].email %></td>
            <td>

             <a href="/contacts-list/update/<%= ContactList[i].id %>" class="btn-primary">
             <i class="fas fa-pencil-alt"></i>Update</a>
             </td>
             <td>
             <a href="/contacts-list/delete/<%= ContactList[i].id %>" class="btn-danger">
             <i class="fas fa-trash-alt"></i>Delete</a>
             </td>
             <% } else { %>
            <th scope="row"><%= i %></th>
            <td><%= ContactList[i].name %></td>
            <td><%= ContactList[i].number %></td>
            <td><%= ContactList[i].email %></td>
             <% } %>
          </tr>
        <% } %>
        </tbody>
      </table>
</div>
</div>



